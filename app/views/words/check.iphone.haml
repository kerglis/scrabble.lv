%h1= t("check_words")

= form_for :search, :url => chk_path, :html => { :method => :post, :class => "form-horizontal"} do |f| 
  %p= f.text_field :word, :placeholder => t("enter_word"), :class => "span4 key_watcher", :data => { :min_length => 2, :max_length => 15, :allowed_symbols => Game.char_list(@locale), :url => chk_path }
  %p= f.submit t("check_word"), :class => "btn btn-success"

#word_exposer
- if @word
  .alert.alert-success.alert-block
    .msg= t("word_found", :word => @word.word).html_safe
- elsif @search.word.present?
  .alert.alert-error.alert-block
    .msg= t("word_not_found", :word => @search.word).html_safe