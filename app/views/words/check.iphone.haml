%h1= t("check_words")

= form_for :search, :url => chk_path, :html => { :method => :post, :class => "form-horizontal"} do |f|
  .row
    = f.text_field :word, :placeholder => t("enter_word"), :style => "width:65%",:data => { :min_length => 2, :max_length => 15, :allowed_symbols => Game.char_list(@locale), :url => chk_path, :"select-all" => true }
    = f.submit t("check_word"), :class => "btn btn-success", :style => "width: 30%"

#word_exposer
- if @word
  .alert.alert-success.alert-block
    .msg= t("word_found", :word => @word.word).html_safe
- elsif @search.word.present?
  .alert.alert-error.alert-block
    .msg= t("word_not_found", :word => @search.word.downcase).html_safe