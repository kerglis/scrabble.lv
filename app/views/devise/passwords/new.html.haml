%h1= t("devise.passwords.forgot_your_password")

= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f|
  = devise_error_messages!
  .control-group
    = f.label :email
    .controls
      = f.email_field :email
  .form-actions
    = f.submit t("devise.passwords.send_reset_instructions"), :class => "btn btn-primary"
    = render :partial => "devise/shared/links"