%h1= t("devise.sign_in")

= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f|
  .control-group
    = f.label :email
    .controls
      = f.email_field :email
  .control-group
    = f.label :password
    .controls
      = f.password_field :password

  - if devise_mapping.rememberable?
    .control-group
      .controls
        %label.checkbox
          = f.check_box :remember_me
          %span= t("devise.remember_me")

  .form-actions
    = f.submit t("devise.sign_in"), :class => "btn btn-primary"
    = render :partial => "devise/shared/links"