%span{:style => "margin-left: 100px"}
  - if controller_name != 'sessions'
    = link_to t("devise.sign_in"), new_session_path(resource_name), :class => "btn"
  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to t("devise.sign_up"), new_registration_path(resource_name), :class => "btn"
  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      = link_to t("devise.sign_in_with", :provider => provider.to_s.titleize).html_safe, omniauth_authorize_path(resource_name, provider), :class => "btn"

%ul.unstyled{:style => "margin-top: 10px"}
  - if devise_mapping.recoverable? && controller_name != 'passwords'
    %li= link_to t("devise.passwords.forgot_your_password"), new_password_path(resource_name)
  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    %li= link_to t("devise.confirmations.didnt_receive_instructions"), new_confirmation_path(resource_name)
  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    %li= link_to t("devise.unlocks.didnt_receive_instructions"), new_unlock_path(resource_name)