.control-group
  = f.label :email
  .controls
    %span.uneditable-input
      = @user.email

.control-group
  .controls
    = link_to t("devise.passwords.change_password"), edit_user_password_path(), :class => "btn"

.control-group
  = f.label :first_name
  .controls
    = f.text_field :first_name  

.control-group
  = f.label :last_name
  .controls= f.text_field :last_name  
  
.control-group
  = f.label :gender
  .controls
    %label.radio.inline
      = f.radio_button :gender, "m"
      = t("male")
    %label.radio.inline
      = f.radio_button :gender, "f"
      = t("female")
    
.control-group
  = f.label :birth_date
  .controls
    = f.text_field :birth_date, :year_range => -90.years.from_now..0.years.from_now, :class => "date_select"

.form-actions
  = f.submit t("save"), :class => "btn btn-success"